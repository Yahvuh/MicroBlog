div.delete
  form(action="/post/#{urlTitle}", method="post")
    div
      button(type="submit", value="#{urlTitle}") Delete post

  button(class="showEdit" href="#editPost") Edit post
div.edit
  form(action="/edit/#{urlTitle}", class="editPost", method="post")
    div
      label(for="title") Title
      br
      input(type="text" id="title" name="title")
    div
      label(for="content") Content
      br
      textarea(id="content" name="content")
    div
      input(type="submit")
