a(href="/users/#{post.username}/#{post.urlTitle}")
  h1 #{post.title} by #{post.username}
p #{post.content}

form(action="/post/#{post._id}", method="post")
  div
    button(type="submit", value="#{post._id}") Delete post

button(id="showEdit" href="#editPost") Edit post
    
form(action="/edit/#{post._id}", id="editPost", method="post")
  div
    label(for="title") Title
    br
    input(type="text" id="title" name="title")
  div
    label(for="content") Content
    br
    textarea(id="content" name="content")
  div
    input(type="submit")
